{
  "description": "NestJS Farm API com Clean Architecture.",
  "entry": "src/app.module.ts",
  "globs": [
    "src/modules/**/*.ts",
    "src/config/**/*.ts",
    "src/main.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/__tests__/**"
  ],
  "include": [
    "CONTRIBUTING.md"
  ],
  "patterns": {
    "controller": "**/presentation/controllers/**/*.ts",
    "usecase": "**/usecases/**/*.ts",
    "service": "**/domain/services/**/*.ts",
    "repository": "**/infra/repositories/**/*.ts",
    "entity": "**/domain/entities/**/*.ts"
  },
  "examples": [
    "src/modules/producers/create-producer.usecase.ts",
    "src/modules/producers/presentation/controllers/producer.controller.ts"
  ]
}